<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_marginTop="5dp"
    android:padding="8dp"
    android:id="@+id/list_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgdp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgdp"
        app:cardCornerRadius="6dp"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/rltParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/inrContr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minWidth="210dp">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="User Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgDropdwon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:tag="in"
                    android:layout_margin="1dp"
                    android:src="@drawable/ic_launcher_foreground"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:layout_marginTop="2dp"
                android:textIsSelectable="true"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:minWidth="200dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lnrContainer"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:minWidth="210dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:layout_weight="1.5"
                    android:text="01-01-2000(00:00am)"
                    android:paddingLeft="6dp" />

                <ImageView
                    android:id="@+id/imgLikes"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="1dp"
                    android:tag="no_love"
                    android:src="@drawable/ic_launcher_foreground1"/>

                <TextView
                    android:id="@+id/message_Likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="0"
                    android:textStyle="normal|bold" />


            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>





